<Page
    x:Class="BUS.TRACKER.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BUS.TRACKER"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#e4e4e4">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Background="#2C4566" Grid.Row="0" HorizontalAlignment="Stretch">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="58" Margin="17">
                <TextBlock FontSize="48" FontFamily="Segoe WP Semibold" FontWeight="Bold" Text="BUS" Foreground="#FFF"/>
                <TextBlock FontSize="48" FontFamily="Segoe WP Semibold" FontWeight="Normal" Text="TRACKER" Foreground="#FFB100"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Margin="17 10 17 10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button x:ConnectionId='1' Grid.Row="0" Background="#2D89EF" Tag="sitting"                    BorderBrush="Transparent"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Image Source="/Assets/icons/in.png"></Image>
            </Button>

            <Button x:ConnectionId='2' Grid.Row="1" Background="#FFB100" Tag="waiting"                    BorderBrush="Transparent"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                <Image Source="/Assets/icons/wait.png"></Image>
            </Button>
        </Grid>
    </Grid>
</Page>

